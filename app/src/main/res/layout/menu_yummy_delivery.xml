<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:fillViewport="true"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    android:scrollbars="none"
    tools:context="com.example.harrys.delivcious.YummyDelivery">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:paddingBottom="50dp">

        <TableRow
            android:background="#F9A825"
            android:padding="5dp"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@android:color/background_dark"
                android:textSize="15sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.4"
                android:gravity="center"
                android:text="Nama"
                android:textColor="@android:color/background_dark"
                android:textSize="15sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:gravity="center"
                android:text="Harga"
                android:textColor="@android:color/background_dark"
                android:textSize="15sp" />
        </TableRow>

        <TableRow
            android:padding="5dp"
            android:weightSum="3">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:src="@mipmap/kentang" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.4"
                android:gravity="center"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:text="Kentang Goreng"
                android:textColor="@android:color/background_dark" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:gravity="center"
                android:text="min. Rp. 5000"
                android:textColor="@android:color/background_dark" />
        </TableRow>

        <TableRow
            android:padding="5dp"
            android:weightSum="3">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:src="@mipmap/sosis" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.4"
                android:gravity="center"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:text="Sosis Goreng"
                android:textColor="@android:color/background_dark" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:gravity="center"
                android:text="min. Rp. 5000"
                android:textColor="@android:color/background_dark" />
        </TableRow>

        <TableRow
            android:padding="5dp"
            android:weightSum="3">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:src="@mipmap/nugget" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.4"
                android:gravity="center"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:text="Nugget"
                android:textColor="@android:color/background_dark" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:gravity="center"
                android:text="min. Rp. 5000"
                android:textColor="@android:color/background_dark" />
        </TableRow>

        <TableRow
            android:padding="5dp"
            android:weightSum="3">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:src="@mipmap/otak2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.4"
                android:gravity="center"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:text="Otak-otak"
                android:textColor="@android:color/background_dark" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:gravity="center"
                android:text="min. Rp. 5000"
                android:textColor="@android:color/background_dark" />
        </TableRow>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="2">

            <TableLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:baselineAligned="false"
                android:weightSum="1">

                <TableRow
                    android:background="#F9A825"
                    android:padding="5dp"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Seasoning"
                        android:textColor="@android:color/background_dark"
                        android:textSize="15sp" />
                </TableRow>

                <TableRow
                    android:background="@drawable/boder_table"
                    android:padding="5dp"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Barbeque"
                        android:textColor="@android:color/background_dark"
                        android:textSize="15sp" />
                </TableRow>

                <TableRow
                    android:background="@drawable/boder_table"
                    android:padding="5dp"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Keju"
                        android:textColor="@android:color/background_dark"
                        android:textSize="15sp" />

                </TableRow>

                <TableRow
                    android:background="@drawable/boder_table"
                    android:padding="5dp"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Jagung Bakar"
                        android:textColor="@android:color/background_dark"
                        android:textSize="15sp" />

                </TableRow>

                <TableRow
                    android:background="@drawable/boder_table"
                    android:padding="5dp"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Balado"
                        android:textColor="@android:color/background_dark"
                        android:textSize="15sp" />

                </TableRow>

                <TableRow
                    android:background="@drawable/boder_table"
                    android:padding="5dp"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Pizza"
                        android:textColor="@android:color/background_dark"
                        android:textSize="15sp" />

                </TableRow>

                <TableRow
                    android:background="@drawable/boder_table"
                    android:padding="5dp"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Rumput Laut"
                        android:textColor="@android:color/background_dark"
                        android:textSize="15sp" />

                </TableRow>

                <TableRow
                    android:background="@drawable/boder_table"
                    android:padding="5dp"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Rendang"
                        android:textColor="@android:color/background_dark"
                        android:textSize="15sp" />

                </TableRow>

            </TableLayout>

            <TableLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:baselineAligned="false">

                <TableRow
                    android:background="#F9A825"
                    android:padding="5dp"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Level Pedas"
                        android:textColor="@android:color/background_dark"
                        android:textSize="15sp" />
                </TableRow>

                <TableRow
                    android:padding="5dp"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingTop="85dp"
                        android:text="0 - 5"
                        android:textColor="@android:color/background_dark"
                        android:textSize="15sp" />
                </TableRow>

            </TableLayout>

        </LinearLayout>

    </TableLayout>

</ScrollView>
